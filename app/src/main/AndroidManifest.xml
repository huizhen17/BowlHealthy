<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bowlhealthy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SingleMenu"></activity>
        <activity android:name=".MenuActivity" android:windowSoftInputMode="adjustPan" />
        <activity android:name=".CheckOut" />
        <activity android:name=".OrderHistory" />
        <activity android:name=".MyCart" />
        <activity android:name=".MyFavourite" />
        <activity android:name=".MyAccount" />
        <activity android:name=".ForgetPassword" />
        <activity android:name=".SignUp" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>